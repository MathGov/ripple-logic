{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ripplelogic.org/schemas/jwks.schema.json",
  "title": "RippleLogic JWKS (Ed25519 OKP keys)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "keys"
  ],
  "properties": {
    "keys": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "kty",
          "crv",
          "x",
          "kid"
        ],
        "properties": {
          "kty": {
            "type": "string",
            "const": "OKP"
          },
          "crv": {
            "type": "string",
            "const": "Ed25519"
          },
          "x": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_-]+$"
          },
          "kid": {
            "type": "string",
            "minLength": 1
          },
          "use": {
            "type": "string"
          },
          "alg": {
            "type": "string"
          }
        }
      }
    }
  }
}
